        <div class="header">
            <h1 style="color: blueviolet;">Cantidad de Lesiones</h1>
            <br />
        </div>
        <div id="grafico2" class="container" style="margin-top: 20px;">
            <div class="row g-4">
                <div class="col-sm-2"></div>
                <div class="col-sm-8">
                    <div>
                        <canvas id="bar_chart"></canvas>
                    </div>
                </div>
                <div class="col-sm-2"></div>
            </div>
            <br />
        </div>
        <br />

        <script>
            var cantLesiones = @Html.Raw(Json.Encode(TempData["CantLesiones"]));
            var Meses = @Html.Raw(Json.Encode(TempData["Meses"]));
            var Lesion = @Html.Raw(Json.Encode(TempData["Lesion"]));

            const data = {
                labels: Meses,
                datasets: [{
                    label: Meses,
                    data: cantLesiones,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(255, 159, 64, 0.2)',
                        'rgba(255, 205, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(201, 203, 207, 0.2)'
                    ],
                    borderColor: [
                        'rgb(255, 99, 132)',
                        'rgb(255, 159, 64)',
                        'rgb(255, 205, 86)',
                        'rgb(75, 192, 192)',
                        'rgb(54, 162, 235)',
                        'rgb(153, 102, 255)',
                        'rgb(201, 203, 207)'
                    ],
                    borderWidth: 1
                }]
            };

            var ctx = $("#bar_chart");
            const config = new Chart(ctx,{
                type: 'bar',
                data: data,
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                },
            });
        </script>

