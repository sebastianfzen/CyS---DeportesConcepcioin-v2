        <div class="container" style="width: 90%; margin-top: 30px;" id="datosJugador">
            <h3 style="color: blueviolet;">Datos del Jugador</h3>
            @using (Html.BeginForm("DatosJugador", "Nutri", FormMethod.Post, new { role = "form", @class = "" }))
            {
                <div class="row g-1 mt-4">
                    <div class="col-sm-4">
                        <h5 class="mb-3">Nombre</h5>
                        @Html.TextBoxFor(f => f.FutbolistaViewModelNutri.NomFutbolista, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                    <div class="col-sm-4">
                        <h5 class="mb-3">Rut</h5>
                        @Html.TextBoxFor(f => f.FutbolistaViewModelNutri.RutFutbolista, new { @class = "form-control", @readonly = "readonly", @id = "RutFutbolista" })
                    </div>
                    <div class="col-sm-4">
                        <h5 class="mb-3">Edad</h5>
                        @Html.TextBoxFor(f => f.FutbolistaViewModelNutri.EdadFutbolista, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="row g-1 mt-2" style="margin-top: 3px;">
                    <div class="col-sm-4">
                        <h5 class="mb-3">Fecha de Nacimiento</h5>
                        @Html.TextBoxFor(f => f.FutbolistaViewModelNutri.FechaNacimientoFutbolista, "{0:dd/MM/yyyy}", new { @class = "form-control", @readonly = "readonly" })
                    </div>
                    <div class="col-sm-4">
                        <h5 class="mb-3">Nacionalidad</h5>
                        @Html.TextBoxFor(f => f.FutbolistaViewModelNutri.NacionalidadFutbolista, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                    <div class="col-sm-4">
                        <h5 class="mb-3">Telefóno</h5>
                        @Html.TextBoxFor(f => f.FutbolistaViewModelNutri.TelefonoFutbolista, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="row g-1" style="margin-top: 3px;">
                    <div class="col-sm-4">
                        <h5 class="mb-3">Correo</h5>
                        @Html.TextBoxFor(f => f.FutbolistaViewModelNutri.EmailFutbolista, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                    <div class="col-sm-4">
                        <h5 class="mb-3">Posición</h5>
                        @Html.TextBoxFor(f => f.FutbolistaViewModelNutri.PosicionFutbolista, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
            }
            <br>
        </div>
        <br />

        <div id="evNutriJugador" class="container g-1 mt-4" style="width: 90%; margin-top: 30px;">
            <div class="input-group">
                <h3 style="color: blueviolet; margin-top: 10px;">Ev. Nutricional</h3>
            </div>
            <div class="table-responsive" style="height: 115px; border: 4px solid black;">
                <table class="table table-bordered" style="width: 100%;">
                    <thead style="border: 3px solid black">
                        <tr style="text-align: center">
                            <th rowspan="2" style="border: 2px solid black; background-color: blueviolet; color: white;">Peso</th>
                            <th rowspan="2" style="border: 2px solid black; background-color: blueviolet; color: white;">Talla</th>
                            <th colspan="2" style="border: 2px solid black; height: 2px; line-height: 2px; background-color: blueviolet; color: white;">M. Adiposa</th>
                            <th colspan="2" style="border: 2px solid black; height: 2px; line-height: 2px; background-color: blueviolet; color: white;">M. Muscular</th>
                            <th rowspan="2" style="border: 2px solid black; background-color: blueviolet; color: white;">6 Pliegues</th>
                            <th rowspan="2" style="border: 2px solid black; background-color: blueviolet; color: white;">I.M.O.</th>
                        </tr>
                        <tr style="text-align: center">
                            <th style="border: 2px solid black; background-color: blueviolet; color: white;">%</th>
                            <th style="border: 2px solid black; background-color: blueviolet; color: white;">Kg.</th>
                            <th style="border: 2px solid black; background-color: blueviolet; color: white;">%</th>
                            <th style="border: 2px solid black; background-color: blueviolet; color: white;">Kg.</th>
                        </tr>
                    </thead>
                    <tbody style="border: 3px solid black">
                        <tr style="text-align: center">
                            @if (Model.evaluacionNutricionalViewModels != null)
                            {
                                foreach (var EvNutri in Model.evaluacionNutricionalViewModels)
                                {
                                    <td id="Peso" style="border: 2px solid black">@EvNutri.peso</td>
                                    <td style="border: 2px solid black">@EvNutri.talla_estatura</td>
                                    if (EvNutri.estado_uno == 1)
                                    {
                                        <td style="border: 2px solid black; background-color: limegreen; color: white;">@EvNutri.porcent_masa_adiposa %</td>
                                    }
                                    else if (EvNutri.estado_uno == 2)
                                    {
                                        <td style="border: 2px solid black; background-color: yellow; color: black;">@EvNutri.porcent_masa_adiposa %</td>
                                    }
                                    else if (EvNutri.estado_uno == 3)
                                    {
                                        <td style="border: 2px solid black; background-color: red; color: white;">@EvNutri.porcent_masa_adiposa %</td>
                                    }

                                    if (EvNutri.estado_uno_dos == 1)
                                    {
                                        <td style="border: 2px solid black; background-color: limegreen; color: white; ">@EvNutri.kilo_masa_adiposa Kg</td>
                                    }
                                    else if (EvNutri.estado_uno_dos == 2)
                                    {
                                        <td style="border: 2px solid black; background-color: yellow; color: black;">@EvNutri.kilo_masa_adiposa Kg</td>
                                    }
                                    else if (EvNutri.estado_uno_dos == 3)
                                    {
                                        <td style="border: 2px solid black; background-color: red; color: white;">@EvNutri.kilo_masa_adiposa Kg</td>
                                    }

                                    if (EvNutri.estado_dos == 1)
                                    {
                                        <td style="border: 2px solid black; background-color: limegreen; color: white; ">@EvNutri.porcent_musculo %</td>
                                    }
                                    else if (EvNutri.estado_dos == 2)
                                    {
                                        <td style="border: 2px solid black; background-color: yellow; color: black;">@EvNutri.porcent_musculo %</td>
                                    }
                                    else if (EvNutri.estado_dos == 3)
                                    {
                                        <td style="border: 2px solid black; background-color: red; color: white;">@EvNutri.porcent_musculo %</td>
                                    }

                                    if (EvNutri.estado_dos_dos == 1)
                                    {
                                        <td style="border: 2px solid black; background-color: limegreen; color: white; ">@EvNutri.kilo_musculo Kg</td>
                                    }
                                    else if (EvNutri.estado_dos_dos == 2)
                                    {
                                        <td style="border: 2px solid black; background-color: yellow; color: black;">@EvNutri.kilo_musculo Kg</td>
                                    }
                                    else if (EvNutri.estado_dos_dos == 3)
                                    {
                                        <td style="border: 2px solid black; background-color: red; color: white;">@EvNutri.kilo_musculo Kg </td>
                                    }

                                    if (EvNutri.estado_tres == 1)
                                    {
                                        <td style="border: 2px solid black; background-color: limegreen; color: white; ">@EvNutri.sumatoria_pliegue mm</td>
                                    }
                                    else if (EvNutri.estado_tres == 2)
                                    {
                                        <td style="border: 2px solid black; background-color: yellow; color: black;">@EvNutri.sumatoria_pliegue mm</td>
                                    }
                                    else if (EvNutri.estado_tres == 3)
                                    {
                                        <td style="border: 2px solid black; background-color: red; color: white;">@EvNutri.sumatoria_pliegue mm</td>
                                    }

                                    if (EvNutri.estado_cuatro == 1)
                                    {
                                        <td style="border: 2px solid black; background-color: limegreen; color: white; ">@EvNutri.imo</td>
                                    }
                                    else if (EvNutri.estado_cuatro == 2)
                                    {
                                        <td style="border: 2px solid black; background-color: yellow; color: black;">@EvNutri.imo</td>
                                    }
                                    else if (EvNutri.estado_cuatro == 3)
                                    {
                                        <td style="border: 2px solid black; background-color: red; color: white;">@EvNutri.imo</td>
                                    }
                                }
                            }
                            else
                            {
                                <td style="border: 2px solid black"></td>
                                <td style="border: 2px solid black"></td>
                                <td style="border: 2px solid black"></td>
                                <td style="border: 2px solid black"></td>
                                <td style="border: 2px solid black"></td>
                                <td style="border: 2px solid black"></td>
                                <td style="border: 2px solid black"></td>
                                <td style="border: 2px solid black"></td>
                            }
                        </tr>
                    </tbody>
                </table>
            </div>
            <br />
            <div class="text-center">
                <button onclick="EvaluacionNutricional();" class="btn btn-primary btn-lg btn-block" style="margin-top: 10px; width: 180px; background-color: blueviolet;">
                    Actualizar
                </button>
            </div>
            <br>
        </div>
        <br />

        @*Obtiene el Rut del Futbolista Seleccionado y Dependiendo de las Condiciones
        Redirije a la vista de agregar o modificar*@
        @if (Model.evaluacionNutricionalViewModels == null)
        {
            <script type="text/javascript">
                function EvaluacionNutricional() {
                    var Rut = document.getElementById("RutFutbolista").value;
                    location.href = "http://cysdeportesconcepcion.somee.com/Nutri/EvaluacionNutricional/?RutFutbolista=" + Rut;
                }
            </script>
        }
        else
        {
            <script type="text/javascript">
                function EvaluacionNutricional() {
                    var Rut = document.getElementById("RutFutbolista").value;
                    location.href = "http://cysdeportesconcepcion.somee.com/Nutri/EditarEvaluacionNutricional/?RutFutbolista=" + Rut;
                }
            </script>
        }

        <div id="suplementoNutriJugador" class="container" style="width: 90%;">
            <div class="input-group">
                <h3 style="color: blueviolet; margin-top: 10px;">Suplementos</h3>
            </div>
            <div class="table-responsive" style="overflow: auto; height: 250px; border: 4px solid black;">
                <table class="table table-bordered" style="width: 100%; overflow-x: auto;">
                    <thead style="border: 3px solid black">
                        <tr style="text-align: center">
                            <th style="border: 2px solid black; background-color: blueviolet; color: white;">Nombre</th>
                            <th style="border: 2px solid black; background-color: blueviolet; color: white;">Tipo</th>
                            <th style="border: 2px solid black; background-color: blueviolet; color: white;">Cantidad</th>
                            <th style="border: 2px solid black; background-color: blueviolet; color: white;">Fecha</th>
                            <th style="border: 2px solid black; background-color: blueviolet; color: white;">Comentario</th>
                            <th style="border: 2px solid black; background-color: blueviolet; color: white;">Opciones</th>
                        </tr>
                    </thead>
                    <tbody style="border: 3px solid black">
                        <tr style="text-align: center">
                            @if (Model.suplementoViewModels != null)
                            {
                                foreach (var Suplemento in Model.suplementoViewModels)
                                {
                                    <td style="border: 2px solid black">@Suplemento.desc_suplemento</td>
                                    <td style="border: 2px solid black">@Suplemento.tipo_suplemento</td>
                                    <td style="border: 2px solid black">@Suplemento.cant_suplemento</td>
                                    <td style="border: 2px solid black">@Suplemento.fecha_suplem.ToString("dd/MM/yyyy")</td>
                                    <td style="border: 2px solid black">@Suplemento.comentariosuplem</td>
