<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!--Carpeta css-->
        <link rel="stylesheet" type="text/css" href="~/Styles/css/administrador/indexAdmin.css">

        <!--ICONOS SOLID-->
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/solid.css">
        <script src="https://use.fontawesome.com/releases/v5.0.7/js/all.js"></script>

        <!--FRAMEWORK BOOTSTRAP-->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">

        <title>Inicio Administrador</title>
    </head>
    <body>
        <nav class="navbar fixed-top navbar-expand-md navbar-dark" style="background-color: #761AAD; position: relative;">
            <div class="container">
                <a href="#" class="navbar-brand mb-0 h1">
                    <img class="d-inline-block align-top" src="~/Styles/img/logodc2.png" width="40" height="40">
                </a>
                <button type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarNav, #sesionNav"
                        class="navbar-toggler"
                        aria-controls="navbarNav"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item text-center active">
                            <a href="@Url.Action("IndexAdmin", "Admin")" class="nav-link">
                                <i class="fas fa-user"></i>  Mi Perfil
                            </a>
                        </li>
                        <li class="nav-item text-center">
                            <a href="@Url.Action("ListarUsuariosView", "Admin")" class="nav-link">
                                <i class="fas fa-users"></i>  Listado de Usuarios
                            </a>
                        </li>
                        <li class="nav-item text-center">
                            <a href="@Url.Action("ListarItems", "Admin")" class="nav-link">
                                <i class="fas fa-table"></i>  Listado de Datos
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item text-center active sesion">
                            <a href="@Url.Action("CerrarSession" , "Login")" id="CerrarSession"><i class="fas fa-sign-out-alt"></i>  Cerrar Sesi&oacute;n</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="header">
            <br />
            <h5 id="FechaActual"></h5>
            <img class="foto_perfil" src="../Styles/img/avatar-login.png">
        </div>
        <div id="passAdmin" class="container" style="width: 80%; margin-top: 30px;">
            <form id="editPassAdmin">
                <div class="row g-3" style="margin-top: 3px;">
                    <div class="col-sm-6">
                        <h5 class="mb-3"><i class="fas fa-lock"></i> Contrase&ntilde;a:</h5>
                        <div class="input-group">
                            <input name="PassAdmin" type="password" class="form-control" placeholder="************" required>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <h5 class="mb-3"><i class="fas fa-lock"></i> Confirmar Contrase&ntilde;a:</h5>
                        <div class="input-group">
                            <input name="confirmarPassAdmin" type="password" class="form-control" placeholder="************" required>
                        </div>
                    </div>
                </div>
                <div class="text-center">
                    <br>
                    <button class="btn btn-primary btn-lg btn-block" style="margin-top: 15px; width: 180px; background-color: blueviolet;">
                        Actualizar
                    </button>
                </div>
            </form>
            <br />
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>

        <script src="bootstrap.bundle.min.js"></script>
        <script src='jquery-3.2.1.min.js'></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <script src='http://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.2.1.js'></script>

        <script>
                $(document).ready(function () {
                    $("#editPassAdmin").submit(function (e) {
                        e.preventDefault();
                        url = "@Url.Content("~/Admin/EditarPassAdmin")"
                        parametros = $(this).serialize();
                        $.post(url, parametros, function (data) {
                            if (data == "ContraseñaActualizada") {
                                alert("Contraseña Actualizada");
                                document.location.href = "@Url.Content("~/Admin/IndexAdmin")";
                            }
                            else {
                                alert(data);
                            }
                        })
                    })
                })
        </script>

        <script>
                $(document).ready(function () {
                    url = "@Url.Content("~/Admin/ObtenerFechaActual")"
                    parametros = $(this).serialize();

                    $.get(url, parametros, function (data) {
                        $('#FechaActual').text(data);
                    })
                });
        </script>

    </body>
</html>
