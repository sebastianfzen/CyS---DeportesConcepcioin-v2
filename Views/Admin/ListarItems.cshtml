@{
    List<SelectListItem> entrenamientos = (List<SelectListItem>)ViewBag.Entrenamientos;
    List<SelectListItem> lesiones = (List<SelectListItem>)ViewBag.Lesiones;
}

<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!--Carpeta css-->
        <link rel="stylesheet" type="text/css" href="~/Styles/css/kinesiologo/listFutbKinseiologo.css">

        <!--JQUERY-->
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

        <!--ICONOS SOLID-->
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/solid.css">
        <script src="https://use.fontawesome.com/releases/v5.0.7/js/all.js"></script>

        <!--FRAMEWORK BOOTSTRAP-->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">

        <title>Listado de Items - Administrador</title>
    </head>
    <body>
        <nav class="navbar fixed-top navbar-expand-md navbar-dark" style="background-color: #761AAD; position: relative;">
            <div class="container">
                <a href="#" class="navbar-brand mb-0 h1">
                    <img class="d-inline-block align-top" src="~/Styles/img/logodc2.png" width="40" height="40">
                </a>
                <button type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarNav, #sesionNav"
                        class="navbar-toggler"
                        aria-controls="navbarNav"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item text-center disabled">
                            <a href="@Url.Action("IndexAdmin", "Admin")" class="nav-link">
                                <i class="fas fa-user"></i>  Mi Perfil
                            </a>
                        </li>
                        <li class="nav-item text-center disabled">
                            <a href="@Url.Action("ListarUsuariosView", "Admin")" class="nav-link">
                                <i class="fas fa-users"></i>  Listado de Usuarios
                            </a>
                        </li>
                        <li class="nav-item text-center active">
                            <a href="@Url.Action("ListarItems", "Admin")" class="nav-link">
                                <i class="fas fa-table"></i>  Listado de Datos
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item text-center active sesion">
                            <a href="@Url.Action("CerrarSession" , "Login")"><i class="fas fa-sign-out-alt"></i>  Cerrar Sesi&oacute;n</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="header">
            <h1 style="color: blueviolet;">Listado de Items</h1>
        </div>
        <div id="listJugadoresKine" class="container" style="margin-top: 20px;">
            <br />

            <h3 style="color: blueviolet;">Tipos de Lesiones</h3>

            <br />

            <a href="@Url.Action("AgregarTipoLesion" , "Admin")">
                <button class="btn btn-primary btn-lg btn-block" style="width: 55px; background-color: blueviolet;">
                    <i class="fas fa-user-plus"></i>
                </button>
            </a>

            <br /><br />

            <div id="cad15" class="table-responsive" style="overflow: auto; height: 250px; border: 4px solid black;">
                <table class="table table-bordered" style="width: 100%; overflow-x: auto;">
                    <thead style="border: 3px solid black">
                        <tr style="text-align: center">
                            <th style="border: 2px solid black; background-color: blueviolet; color: white;">Lesión</th>
                            <th style="border: 2px solid black; background-color: blueviolet; color: white;">Opción</th>
                        </tr>
                    </thead>
                    <tbody style="border: 3px solid black">
                        @foreach (var lesion in lesiones)
                        {
                            <tr style="text-align: center">
                                <td style="border: 2px solid black">@lesion.Text</td>
                                <td style="border: 2px solid black"><a href="@Url.Content("~/Admin/EditarTipoLesion/?IdLesion="+lesion.Value)">Modificar</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <br />

            <h3 style="color: blueviolet;">Tipos de Entrenamientos</h3>

            <br />

            <a href="@Url.Action("AgregarTipoEntrenamiento" , "Admin")">
                <button class="btn btn-primary btn-lg btn-block" style="width: 55px; background-color: blueviolet;">
                    <i class="fas fa-user-plus"></i>
                </button>
            </a>

            <br /><br />

            <div id="cad17" class="table-responsive" style="overflow: auto; height: 250px; border: 4px solid black;">
                <table class="table table-bordered" style="width: 100%; overflow-x: auto;">
                    <thead style="border: 3px solid black">
                        <tr style="text-align: center">
                            <th style="border: 2px solid black; background-color: blueviolet; color: white;">Entrenamientos</th>
                            <th style="border: 2px solid black; background-color: blueviolet; color: white;">Opción</th>
                        </tr>
                    </thead>
                    <tbody style="border: 3px solid black">
                        @foreach (var entrenamiento in entrenamientos)
                        {
                            <tr style="text-align: center">
                                <td style="border: 2px solid black">@entrenamiento.Text</td>
                                <td style="border: 2px solid black"><a href="@Url.Content("~/Admin/EditarTipoEntrenamiento/?IdEntrenamiento="+entrenamiento.Value)">Modificar</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <br />
        </div>
        <br />

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>

    </body>
</html>
